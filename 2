package object;
import java.awt.*;
import java.awt.color.*;
//import static java.awt.SystemColor.window;
import static java.awt.SystemColor.window;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.WindowConstants;
import java.awt.Graphics;
import java.awt.Graphics2D;
import javax.swing.JComponent;


public class Rect {
    
    public static void main(String[] args) {
        
        JFrame window = new JFrame();  // TODO code application logic here
        window.setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
        window.setBounds(10,10,640,480);
        window.setTitle("Risunok");
        window.setVisible(true);
        window.getContentPane().add(new Kvadrat());
        
    }}
class Kvadrat extends JComponent{

    
     
    public void paintComponent(Graphics g) {
        this.setBackground(Color.WHITE);
         
        g.setColor (Color.red);
        g.drawLine (10, 20, 100, 50);
        g.setColor (Color.blue);
        g.drawRect (10, 50, 100, 50);
    }
    
}

